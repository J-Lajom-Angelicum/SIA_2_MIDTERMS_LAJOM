@model SIA_MIDTERMS_LAJOM.Models.DTO.TitleDTO.TitleReadDTO

@{
    ViewData["Title"] = "Delete Title";
}

<h2>Delete Title</h2>

<h3>Are you sure you want to delete this title?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.TitleId</dd>

        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title1</dd>

        <dt class="col-sm-2">Publisher</dt>
        <dd class="col-sm-10">@Model.Pub?.PubName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Advance</dt>
        <dd class="col-sm-10">@Model.Advance</dd>

        <dt class="col-sm-2">Royalty</dt>
        <dd class="col-sm-10">@Model.Royalty</dd>

        <dt class="col-sm-2">YTD Sales</dt>
        <dd class="col-sm-10">@Model.YtdSales</dd>

        <dt class="col-sm-2">Pubdate</dt>
        <dd class="col-sm-10">@Model.Pubdate.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TitleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
