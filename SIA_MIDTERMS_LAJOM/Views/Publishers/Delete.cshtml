@model SIA_MIDTERMS_LAJOM.Models.DTO.PublisherDTO.PublisherReadDTO

@{
    ViewData["Title"] = "Delete Publisher";
}

<h2>Delete Publisher</h2>

<h3>Are you sure you want to delete this publisher?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PubId</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.PubName</dd>

        <dt class="col-sm-2">City</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">State</dt>
        <dd class="col-sm-10">@Model.State</dd>

        <dt class="col-sm-2">Country</dt>
        <dd class="col-sm-10">@Model.Country</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PubId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>